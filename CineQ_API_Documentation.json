    "frontendUsageExamples": {
      "javascript": {
        "description": "Examples for JavaScript/React frontend",
        "examples": {
          "getAllGenres": {
            "code": "const getAllGenres = async () => {\n  try {\n    const response = await fetch('/api/genre', {\n      method: 'GET',\n      headers: {\n        'Authorization': `Bearer ${localStorage.getItem('token')}`,\n        'Content-Type': 'application/json'\n      },\n      credentials: 'include' // For cookie support\n    });\n    \n    const data = await response.json();\n    \n    if (data.success) {\n      console.log('Genres:', data.data);\n      return data.data;\n    } else {\n      console.error('Error:', data.message);\n    }\n  } catch (error) {\n    console.error('Network error:', error);\n  }\n};"
          },
          "createGenre": {
            "code": "const createGenre = async (genreData) => {\n  try {\n    const response = await fetch('/api/genre', {\n      method: 'POST',\n      headers: {\n        'Authorization': `Bearer ${localStorage.getItem('token')}`,\n        'Content-Type': 'application/json'\n      },\n      credentials: 'include',\n      body: JSON.stringify({\n        name: genreData.name,\n        description: genreData.description,\n        is_active: genreData.is_active || true\n      })\n    });\n    \n    const data = await response.json();\n    \n    if (response.status === 201 && data.success) {\n      console.log('Genre created:', data.data);\n      return data.data;\n    } else {\n      console.error('Error:', data.message);\n      if (data.data) {\n        console.error('Validation errors:', data.data);\n      }\n    }\n  } catch (error) {\n    console.error('Network error:', error);\n  }\n};"
          },
          "createArtist": {
            "code": "const createArtist = async (artistData) => {\n  try {\n    const response = await fetch('/api/artist', {\n      method: 'POST',\n      headers: {\n        'Authorization': `Bearer ${localStorage.getItem('token')}`,\n        'Content-Type': 'application/json'\n      },\n      credentials: 'include',\n      body: JSON.stringify({\n        name: artistData.name,\n        bio: artistData.bio,\n        profilePicture: artistData.profilePicture,\n        isActive: artistData.isActive !== undefined ? artistData.isActive : true,\n        order: artistData.order,\n        industry: artistData.industry\n      })\n    });\n    \n    const data = await response.json();\n    \n    if (data.success) {\n      console.log('Artist created:', data.data);\n      return data.data;\n    } else {\n      console.error('Error:', data.message);\n    }\n  } catch (error) {\n    console.error('Network error:', error);\n  }\n};"
          }
        }
      }
